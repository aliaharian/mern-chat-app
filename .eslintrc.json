{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "parser": "@babel/eslint-parser",
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "requireConfigFile": false
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    },
    "plugins": ["prettier"]
}
